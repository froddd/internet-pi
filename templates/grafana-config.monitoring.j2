GF_SECURITY_ADMIN_PASSWORD={{ monitoring_grafana_admin_password }}
GF_USERS_ALLOW_SIGN_UP=false
GF_INSTALL_PLUGINS=flant-statusmap-panel,ae3e-plotly-panel
{% if grafana_smtp and grafana_smtp.enabled %}
GF_SMTP_ENABLED=true
GF_SMTP_HOST={{ grafana_smtp.host }}
GF_SMTP_USER={{ grafana_smtp.user }}
GF_SMTP_PASSWORD={{ grafana_smtp.password }}
GF_SMTP_SKIP_VERIFY={{ grafana_smtp.skip_verify }}
GF_SMTP_FROM_ADDRESS={{ grafana_smtp.from_address }}
GF_SMTP_FROM_NAME={{ grafana_smtp.from_name }}
{% endif %}
